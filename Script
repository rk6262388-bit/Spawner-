-- [[ CONFIGURATION ]]
local CorrectKey = "68170246I$6528"
local KeyLink = "https://link-hub.net/1279978/ESEqa7W5xj79"
local ScriptToLoad = function()
    loadstring(game:HttpGet("https://api.rubis.app/v2/scrap/wTBIrf8gk8gFx1wI/raw", true))()
end

-- [[ GUI CREATION ]]
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local KeyInput = Instance.new("TextBox")
local SubmitBtn = Instance.new("TextButton")
local GetKeyBtn = Instance.new("TextButton")

-- Parent the GUI
ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "KeySystemGUI"

-- Main Frame Styling
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
MainFrame.Position = UDim2.new(0.5, -125, 0.5, -75)
MainFrame.Size = UDim2.new(0, 250, 0, 150)
MainFrame.Active = true
MainFrame.Draggable = true -- Allows user to move the GUI

-- Title
Title.Parent = MainFrame
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "Key System"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20

-- TextBox for Key
KeyInput.Parent = MainFrame
KeyInput.Position = UDim2.new(0.1, 0, 0.3, 0)
KeyInput.Size = UDim2.new(0.8, 0, 0, 30)
KeyInput.PlaceholderText = "Enter Key Here..."
KeyInput.Text = ""

-- Submit Button Logic
SubmitBtn.Parent = MainFrame
SubmitBtn.Position = UDim2.new(0.1, 0, 0.6, 0)
SubmitBtn.Size = UDim2.new(0.35, 0, 0, 30)
SubmitBtn.Text = "Submit"
SubmitBtn.BackgroundColor3 = Color3.fromRGB(50, 150, 50)

SubmitBtn.MouseButton1Click:Connect(function()
    if KeyInput.Text == CorrectKey then
        print("Access Granted!")
        MainFrame:Destroy() -- Close GUI on success
        ScriptToLoad()    -- Run your loadstring
    else
        KeyInput.Text = ""
        KeyInput.PlaceholderText = "WRONG KEY!"
    end
end)

-- Get Key Button Logic
GetKeyBtn.Parent = MainFrame
GetKeyBtn.Position = UDim2.new(0.55, 0, 0.6, 0)
GetKeyBtn.Size = UDim2.new(0.35, 0, 0, 30)
GetKeyBtn.Text = "Get Key"
GetKeyBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)

GetKeyBtn.MouseButton1Click:Connect(function()
    setclipboard(KeyLink) -- Copies link to user's clipboard
    print("Link copied to clipboard!")
end)
